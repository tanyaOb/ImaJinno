<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:text="    Would like to share your picture?\n
        SHOW YOUR INTEREST!\n
        'Save' and upload it with hashtag\n
        #ImaJinno\n
        on your personal or our public pages!"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/facebook_name"
        android:gravity="center"
        />

    <ImageButton

        android:id="@+id/fb_address"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
    />
    <ImageButton

        android:id="@+id/vk_address"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/shareOk"
        android:text="Okay!"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center">
    </Button>

</LinearLayout>
